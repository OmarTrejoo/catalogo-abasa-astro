---
import '../styles/global.css';
import HeaderSearch from '../components/HeaderSearch';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 text-gray-900 min-h-screen flex flex-col">
    <header class="bg-gray-400 shadow-sm sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 md:py-4">
        <div class="flex items-center justify-between gap-2 md:gap-4">
          <a href="/" class="inline-block hover:opacity-90 transition-opacity flex-shrink-0">
            <img 
              src="/images/logoabasa.avif" 
              alt="ABASA" 
              class="h-10 md:h-12 w-auto"
            />
          </a>
          
          <HeaderSearch client:load />
          
          <div class="flex items-center gap-3 flex-shrink-0">
            <button class="relative p-2 text-gray-300 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.68 4.32a2 2 0 001.96 2.68h9.44a2 2 0 001.96-2.68L16 13M9 19a2 2 0 11-4 0 2 2 0 014 0zm8 0a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-medium">0</span>
            </button>
            
            <a href="#contacto" class="px-3 md:px-4 py-2 text-xs md:text-sm bg-white hover:bg-gray-100 text-gray-900 font-semibold rounded-lg transition-colors whitespace-nowrap">
              <span class="hidden sm:inline">Contactar</span>
              <span class="sm:hidden">Contacto</span>
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer id="contacto" class="bg-gray-800 text-gray-300 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div>
            <h3 class="text-white font-bold text-lg mb-4">ABASA</h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              Abastecedora Industrial en el norte de México.
            </p>
          </div>
          
          <div>
            <h3 class="text-white font-bold text-lg mb-4">Contacto</h3>
            <ul class="space-y-3 text-sm">
              <li>
                <a href="tel:+528787862863" class="text-gray-400 hover:text-white flex items-center gap-2 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  (878) 786-2863
                </a>
              </li>
              <li>
                <a href="tel:+18305132038" class="text-gray-400 hover:text-white flex items-center gap-2 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  (830) 513-2038
                </a>
              </li>
              <li>
                <a href="mailto:ventas@abasamx.com" class="text-gray-400 hover:text-white flex items-center gap-2 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  ventas@abasamx.com
                </a>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-white font-bold text-lg mb-4">Ubicación</h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              Venustiano Carranza 2000b<br />
              Plaza Local 1<br />
              Piedras Negras, Coahuila
            </p>
            <p class="text-gray-400 text-sm mt-4">
              <strong class="text-white">Horario:</strong><br />
              Lun-Vie: 8:00 - 17:30<br />
              Sábado: 9:00 - 13:00
            </p>
          </div>
        </div>
        
        <div class="pt-8 text-center">
          <p class="text-gray-500 text-sm">&copy; 2025 ABASA - Abastecedora Industrial. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

