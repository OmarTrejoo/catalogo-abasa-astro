---
import Layout from '../../layouts/Layout.astro';
import { obtenerProductoPorSlug, obtenerProductos, obtenerBadgesProducto, tieneOferta, obtenerPrecioOriginal } from '../../lib/products';

const { slug } = Astro.params;

const producto = obtenerProductoPorSlug(slug);

if (!producto) {
  return Astro.redirect('/404');
}

const badges = obtenerBadgesProducto(producto);
const enOferta = tieneOferta(producto);
const precioOriginal = obtenerPrecioOriginal(producto);

const todosLosProductos = obtenerProductos();
const productosRelacionados = todosLosProductos
  .filter(p => p.categoria === producto.categoria && p.id !== producto.id)
  .slice(0, 4);
---

<Layout 
  title={`${producto.nombre} | ABASA`}
  description={`${producto.descripcion} - ${producto.marca}. Especificaciones técnicas y detalles completos.`}
>
  <nav class="bg-gray-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700 transition-colors">
            Inicio
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/#todos-productos" class="text-gray-500 hover:text-gray-700 transition-colors">
            Productos
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-gray-900 font-medium">{producto.nombre}</span>
        </li>
      </ol>
    </div>
  </nav>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="p-6 lg:p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
          
          <div>
            <div class="relative aspect-square bg-gray-50 rounded-xl overflow-hidden">
              <img
                src={producto.imagen}
                alt={producto.nombre}
                class="w-full h-full object-cover"
              />
              
              {badges.length > 0 && (
                <div class="absolute top-3 left-3 flex flex-col gap-2">
                  {badges.map((badge) => (
                    <span
                      class={`px-2.5 py-1 text-xs font-semibold rounded-full border backdrop-blur-sm ${badge.color} shadow-sm`}
                    >
                      {badge.texto}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </div>

          <div class="space-y-5">
            <div>
              <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
                {producto.nombre}
              </h1>
              <p class="text-gray-600 leading-relaxed">
                {producto.descripcion}
              </p>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex-1">
                  {enOferta && precioOriginal ? (
                    <div class="space-y-2">
                      <div class="flex items-center gap-2">
                        <span class="text-2xl font-bold text-gray-900">
                          ${producto.precio.toLocaleString('es-MX', { minimumFractionDigits: 2 })}
                        </span>
                        <span class="px-2 py-0.5 bg-orange-100 text-orange-800 text-xs font-semibold rounded">
                          Oferta
                        </span>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class="text-lg text-gray-400 line-through">
                          ${precioOriginal.toLocaleString('es-MX', { minimumFractionDigits: 2 })}
                        </span>
                        <span class="text-sm text-orange-600 font-bold">
                          {Math.round((1 - producto.precio / precioOriginal) * 100)}% OFF
                        </span>
                      </div>
                    </div>
                  ) : (
                    <span class="text-2xl font-bold text-gray-900">
                      ${producto.precio.toLocaleString('es-MX', { minimumFractionDigits: 2 })}
                    </span>
                  )}
                  
                  <div class="flex items-center gap-2 mt-3">
                    <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-emerald-600 font-medium text-sm">En stock - {producto.stock} disponibles</span>
                  </div>
                </div>

                <div class="flex flex-col sm:flex-row gap-3 lg:flex-col lg:w-48">
                  <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2 text-sm">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    Comprar ahora
                  </button>
                  <button class="bg-gray-100 hover:bg-gray-200 text-gray-900 font-semibold py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2 text-sm">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.68 4.32a2 2 0 001.96 2.68h9.44a2 2 0 001.96-2.68L16 13M9 19a2 2 0 11-4 0 2 2 0 014 0zm8 0a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Agregar al carrito
                  </button>
                </div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-lg border border-gray-200 overflow-hidden">
              <div class="px-4 py-3 bg-gray-100 border-b border-gray-200">
                <h3 class="font-semibold text-gray-900">Especificaciones técnicas</h3>
              </div>
              <div class="p-4">
                <dl class="space-y-2">
                  <div class="flex justify-between py-1.5 border-b border-gray-200 last:border-b-0">
                    <dt class="font-medium text-gray-600 text-sm">Marca:</dt>
                    <dd class="text-gray-900 font-semibold text-sm">{producto.marca}</dd>
                  </div>
                  {Object.entries(producto.especificaciones).map(([key, value]) => (
                    <div class="flex justify-between py-1.5 border-b border-gray-200 last:border-b-0">
                      <dt class="font-medium text-gray-600 capitalize text-sm">{key}:</dt>
                      <dd class="text-gray-900 font-semibold text-sm">{value}</dd>
                    </div>
                  ))}
                  <div class="flex justify-between py-1.5 border-b border-gray-200 last:border-b-0">
                    <dt class="font-medium text-gray-600 text-sm">Categoría:</dt>
                    <dd class="text-gray-900 font-semibold text-sm">{producto.categoria}</dd>
                  </div>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {productosRelacionados.length > 0 && (
      <section class="mt-8">
        <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-900">Productos relacionados</h2>
            <p class="text-gray-600 text-sm">Otros productos de {producto.categoria}</p>
          </div>
          
          <div class="p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
              {productosRelacionados.map((productoRelacionado) => (
                <a href={`/item/${productoRelacionado.slug}`} class="group">
                  <article class="bg-gray-50 rounded-lg border border-gray-200 hover:shadow-md transition-all duration-200 overflow-hidden h-full flex flex-col">
                    <div class="relative aspect-square bg-gray-100 overflow-hidden">
                      <img
                        src={productoRelacionado.imagen}
                        alt={productoRelacionado.nombre}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                    <div class="p-3 flex-1 flex flex-col">
                      <h3 class="font-semibold text-gray-900 text-xs line-clamp-2 mb-1">
                        {productoRelacionado.nombre}
                      </h3>
                      <p class="text-xs text-gray-500 mb-2">{productoRelacionado.marca}</p>
                      <div class="mt-auto">
                        <span class="text-sm font-bold text-gray-900">
                          ${productoRelacionado.precio.toLocaleString('es-MX', { minimumFractionDigits: 2 })}
                        </span>
                      </div>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          </div>
        </div>
      </section>
    )}
  </main>
</Layout>
